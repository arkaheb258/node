{
	"apps" : [{
		"name"		: "Strada",
		"script"	: "node/main.js",
		"args"		: ["--port=8888", "--interval=200"],
		"out_file"	: "log/strada.log",
		"error_file": "log/strada.err",
		"pid_file"	: "log/main.pid",
		"log_date_format" : "YYYY-MM-DD HH:mm:ss.SSS ",
		"merge_logs": true,
		"watch"		: true,
		"max_memory_restart":	"150M"
	},{
		"name"		: "Web Server",
		"script"	: "node/webServer.js",
		"args"		: ["--port=8888", "--dir=../build", "--hw=PC"],
		"out_file"	: "log/web.log",
		"error_file": "log/web.err",
		"log_date_format" : "YYYY-MM-DD HH:mm:ss.SSS ",
		"max_memory_restart":	"100M"
	},{
		"name"		: "Zapis do pliku",
		"script"	: "node/zapisDoPliku.js",
		"args"		: ["--port=8888", "--dir=log"],
		"out_file"	: "log/zapis.log",
		"error_file": "log/zapis.err",
		"log_date_format" : "YYYY-MM-DD HH:mm:ss.SSS ",
		"max_memory_restart":	"100M"
	}]
